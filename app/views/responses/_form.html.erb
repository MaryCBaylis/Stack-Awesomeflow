<%= form_for @response do |f| %>

  <% if @response.errors.any? %>
    <ul>
      <% @response.errors.full_messages.each do |e| %>
        <li><%= e %></li>
      <% end %>
    </ul>
  <% end %>
  <%= f.label :body %>
  <%= f.text_area :body %>
  <%= f.hidden_field :post_type, @response.post_type %>
  <%= f.hidden_field :post_id, @response.post_id %>
  <%= f.submit %>
<% end %>
