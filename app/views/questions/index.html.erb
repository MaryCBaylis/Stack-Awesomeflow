<div class='question-all-container'>
  <div class='question-header'>
    <h2>View Questions</h2>
    <div class='question-header-links'>
      <%= link_to "Ask a question!", new_question_path %>
      <ul>
        <li>Sort by:</li>
        <li><%= link_to 'Recent', recent_questions_path %></li>
        <li><%= link_to 'Popular', popular_questions_path %></li>
        <li><%= link_to 'Trending', trending_questions_path %></li>
      </ul>
    </div>
  </div>

  <% @questions.each do |question| %>
    <div class='question'>
      <div class='question-header'>
        <h4><%= link_to question.title, question_path(question) %></h4>
        <span class='question-votes'><%= question.net_vote %></span>
      </div>
      <div class='question-content'>
        <p>User: <%= question.user.email %></p>
        <% if @trending %>
          <p><%= question.created_at.strftime(" Asked on %m/%d/%Y at %I:%M%p") %></p>
          <%= question.count_recent_votes %> total votes,
          <%= question.count_recent_answers %> answers,
          <%= question.count_recent_comments %> comments
        <% end %>
      </div>
    </div>
  <% end %>
</div>